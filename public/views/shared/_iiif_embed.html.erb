<% if result.iiif_enabled? %>
  <div class="iiif-embed">
    <%= content_tag(:iframe, nil, {
      :src => result.iiif_viewer_url + CGI::escape(result.iiif_manifest.fetch('file_uri')),
      :class => 'universal-viewer-iframe',
      :allow => 'fullscreen',
    }) %>
  </div>
<% else %>
  <div class="alert alert-danger">AppConfig[:iiif_viewer_url] needs to be set to embed IIIF viewer</div>
<% end %>